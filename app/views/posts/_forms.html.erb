<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
		<p><%= plururalize(@post.errors.count, 'error') %> prevented this post from saving:</p>
		<ul>
			<% @post.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<%= f.label :content, 'Write your content here:' %>
	<%= f.text_area :content %>
	<%= f.submit %>
<% end %>