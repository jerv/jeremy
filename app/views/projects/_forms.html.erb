<%= form_for @project do |f| %>
	<% if @project.errors.any? %>
		<p><%= plururalize(@project.errors.count, 'error') %> prevented this project from saving:</p>
		<ul>
			<% @project.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<%= f.label :link %>
	<%= f.text_field :link %>
	<%= f.label :description, 'Write your description here:' %>
	<%= f.text_area :description %>
	<%= f.submit %>
<% end %>